@       3600 IN SOA dns1.${CLUSTER_DOMAIN}. hostmaster.${CLUSTER_DOMAIN}. (
                                2019010101 ; serial
                                21600      ; refresh (6 hours)
                                3600       ; retry (1 hour)
                                604800     ; expire (1 week)
                                86400      ; minimum TTL (1 hour)
                                )
;
api                                      A 192.168.111.132
ns1                                      A 192.168.111.133
$ORIGIN ${CLUSTER_NAME}.${CLUSTER_DOMAIN}.
